<handler-config> 
  <handler-chain> 
    <handler-chain-name>MAPHandlerChain</handler-chain-name> 
    <handler> 
      <handler-name>MAPAggregator</handler-name> 
      <handler-class>org.objectweb.celtix.bus.ws.addressing.MAPAggregator</handler-class> 
    </handler>
    <handler> 
      <handler-name>MAPVerifier</handler-name> 
      <handler-class>org.objectweb.celtix.systest.ws.addressing.MAPVerifier</handler-class> 
      <init-param>
        <param-name>inbound</param-name>
        <param-value>javax.xml.ws.addressing.context.inbound</param-value>
      </init-param>
      <init-param>
        <param-name>outbound</param-name>
        <param-value>javax.xml.ws.addressing.context.outbound</param-value>
      </init-param>
    </handler>
    <handler> 
      <handler-name>MAPCodec</handler-name> 
      <handler-class>org.objectweb.celtix.bus.ws.addressing.soap.MAPCodec</handler-class> 
    </handler> 
    <handler> 
      <handler-name>HeaderVerifier</handler-name> 
      <handler-class>org.objectweb.celtix.systest.ws.addressing.HeaderVerifier</handler-class> 
    </handler> 
  </handler-chain> 
</handler-config> 
