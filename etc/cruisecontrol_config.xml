<cruisecontrol>
    <project name="celtix">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/celtix_cruisecontrol/celtix"/>
        </bootstrappers>
        <modificationset quietperiod="120">
            <svn localWorkingCopy="/x1/celtix_cruisecontrol/celtix/trunk"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/celtix_cruisecontrol/logs/celtix/currentbuild.txt"/>
        </listeners>
        <schedule interval="120">
            <ant antscript="/x1/celtix_cruisecontrol/celtix/trunk/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build"
                 antWorkingDir="/x1/celtix_cruisecontrol/celtix/trunk" uselogger="true">
            </ant>
        </schedule>
        <log dir="/x1/celtix_cruisecontrol/logs/celtix">
            <merge dir="/x1/celtix_cruisecontrol/celtix/trunk/build/testresults"/>
        </log>
        <publishers>
            <artifactspublisher dir="/x1/celtix_cruisecontrol/celtix/trunk/build/testresults" subdirectory="testresults" dest="/x1/celtix_cruisecontrol/logs/celtix"/>
            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="celtix-build@objectweb.org"
                returnname="Celtix Build Machine"
                defaultsuffix="@users.forge.objectweb.org"
                buildresultsurl="http://pdceltix.boston.amer.iona.com:8080/cruisecontrol/buildresults/celtix"
                skipusers="false"
                subjectprefix="Celtix Cruisecontrol Build Result: "
                css="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/celtix_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/celtix_cruisecontrol/logs/celtix"
                >
                <always address="celtix-build@objectweb.org" />
                <failure address="celtix-build@objectweb.org" />
            </htmlemail>
        </publishers>
    </project>
</cruisecontrol> 
