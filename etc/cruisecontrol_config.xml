<cruisecontrol>
    <project name="CXF">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/CXF_cruisecontrol/CXF"/>
        </bootstrappers>
        <modificationset quietperiod="120">
            <svn localWorkingCopy="/x1/CXF_cruisecontrol/CXF/trunk"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/CXF_cruisecontrol/logs/CXF/currentbuild.txt"/>
        </listeners>
        <schedule interval="120">
            <ant antscript="/x1/CXF_cruisecontrol/CXF/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build"
                 antWorkingDir="/x1/CXF_cruisecontrol/CXF/trunk" uselogger="true" timeout="1800">
            </ant>
            <!--maven2 mvnscript="/x1/CXF_cruisecontrol/CXF/trunk/maven/bin/mvn"
                 pomfile="/x1/CXF_cruisecontrol/CXF/trunk/pom.xml" goal="clean|install"  timeout="1800">
            </maven2-->
        </schedule>
        <log dir="/x1/CXF_cruisecontrol/logs/CXF">
            <merge dir="/x1/CXF_cruisecontrol/CXF/trunk/target/surefire-reports"/>
        </log>
        <publishers>
            <artifactspublisher file="/x1/CXF_cruisecontrol/CXF/trunk/build.out" dest="/x1/CXF_cruisecontrol/logs/CXF"/>
            <artifactspublisher file="/x1/CXF_cruisecontrol/CXF/trunk/build.out.clean" dest="/x1/CXF_cruisecontrol/logs/CXF"/>
            <artifactspublisher dir="/x1/CXF_cruisecontrol/CXF/trunk/target/surefire-reports"
                subdirectory="test-reports"
                dest="/x1/CXF_cruisecontrol/logs/CXF"/>

            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-CXF-dev@iona.com"
                returnname="CXF Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdCXF.boston.amer.iona.com:8080/cruisecontrol/buildresults/CXF"
                skipusers="false"
                subjectprefix="CXF Cruisecontrol Build Result: "
                css="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/CXF_cruisecontrol/logs/CXF"
                >
                <always address="eng-CXF-dev@iona.com" />
                <failure address="eng-CXF-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>
    <project name="CXF-distribution">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/CXF_cruisecontrol/CXF"/>
        </bootstrappers>
        <modificationset quietperiod="120">
            <svn localWorkingCopy="/x1/CXF_cruisecontrol/CXF/trunk"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/CXF_cruisecontrol/logs/CXF-distribution/currentbuild.txt"/>
        </listeners>
        <schedule>
            <ant antscript="/x1/CXF_cruisecontrol/CXF/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build.distribution"
                 antWorkingDir="/x1/CXF_cruisecontrol/CXF/trunk" uselogger="true"
                 time="0900" timeout="3600">
            </ant>
            <ant antscript="/x1/CXF_cruisecontrol/CXF/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="build.xml" target="cruisecontrol.build.distribution"
                 antWorkingDir="/x1/CXF_cruisecontrol/CXF/trunk" uselogger="true"
                 time="2100" timeout="3600">
            </ant>
        </schedule>
        <log dir="/x1/CXF_cruisecontrol/logs/CXF-distribution"/>
        <publishers>
            <artifactspublisher file="/x1/CXF_cruisecontrol/CXF/trunk/distribution/build.out" dest="/x1/CXF_cruisecontrol/logs/CXF-distribution"/>
            <artifactspublisher file="/x1/CXF_cruisecontrol/CXF/trunk/distribution/build.out.clean" dest="/x1/CXF_cruisecontrol/logs/CXF-distribution"/>

            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-CXF-dev@iona.com"
                returnname="CXF Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdCXF.boston.amer.iona.com:8080/cruisecontrol/buildresults/CXF-distribution"
                skipusers="false"
                subjectprefix="CXF Distribution Cruisecontrol Build Result: "
                css="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/CXF_cruisecontrol/logs/CXF-distribution"
                >
                <always address="eng-CXF-dev@iona.com" />
                <failure address="eng-CXF-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>    
    <project name="CXF-cpitest">
        <bootstrappers>
            <svnbootstrapper localWorkingCopy="/x1/CXF_cruisecontrol/CXF"/>
            <svnbootstrapper localWorkingCopy="/x1/CXF_cruisecontrol/sandbox/CXF-cpi"/>
        </bootstrappers>
        <modificationset quietperiod="60">
            <buildstatus logdir="/x1/CXF_cruisecontrol/logs/CXF-distribution"/>
        </modificationset>
        <listeners>
            <currentbuildstatuslistener file="/x1/CXF_cruisecontrol/logs/CXF-cpitest/currentbuild.txt"/>
        </listeners>
        <schedule interval="120">
            <ant antscript="/x1/CXF_cruisecontrol/CXF/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 buildfile="/x1/CXF_cruisecontrol/sandbox/CXF-cpi/cpi-source/build.xml" target="cpitest"
                 antWorkingDir="/x1/CXF_cruisecontrol/sandbox/CXF-cpi/cpi-source" 
                 uselogger="true" timeout="1800">
                    <property name="BINARY_KIT_DIR" value="/x1/CXF_cruisecontrol/CXF/trunk/distribution/target"/>
            </ant>
        </schedule>
        <log dir="/x1/CXF_cruisecontrol/logs/CXF-cpitest">
            <merge dir="/x1/CXF_cruisecontrol/sandbox/CXF-cpi/cpi-source/xsyte_result"/>
        </log>
        <publishers>
            <antpublisher antscript="/x1/CXF_cruisecontrol/CXF/trunk/distribution/tools/ant/1.6.5/bin/ant"
                 antworkingdir="/x1/CXF_cruisecontrol/sandbox/CXF-cpi/cpi-source"
                 buildfile="cpi-report.xml"
                 target="publish">
                <property name="LOG_DIR" value="/x1/CXF_cruisecontrol/logs/CXF-cpitest"/>
            </antpublisher>
            <htmlemail mailhost="amereast-ems2.iona.com"
                returnaddress="eng-CXF-dev@iona.com"
                returnname="CXF Build Machine"
                defaultsuffix="@iona.com"
                buildresultsurl="http://pdCXF.boston.amer.iona.com:8080/cruisecontrol/buildresults/CXF-cpitest"
                skipusers="true"
                subjectprefix="CXF CPI-Test Cruisecontrol Build Result: "
                css="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/css/cruisecontrol.css"
                xsldir="/x1/CXF_cruisecontrol/cruisecontrol/reporting/jsp/webcontent/xsl"
                logdir="/x1/CXF_cruisecontrol/logs/CXF-cpitest"
                >
                <always address="eng-CXF-dev@iona.com" />
                <failure address="eng-CXF-dev@iona.com" />
            </htmlemail>
        </publishers>
    </project>


</cruisecontrol>
