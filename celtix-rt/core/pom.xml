<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.objectweb.celtixfire</groupId>
    <artifactId>cxf-rt-core</artifactId>
    <packaging>jar</packaging>
    <version>1.1-SNAPSHOT</version>
    <name>CeltiXfire Runtime Core</name>
    <url>http://celtix.objectweb.org/</url>

    <parent>
        <groupId>org.objectweb.celtixfire</groupId>
        <artifactId>cxf-rt</artifactId>
        <version>1.1-SNAPSHOT</version>
    </parent>

    <properties>
        <topDirectoryLocation>../..</topDirectoryLocation>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymockclassextension</artifactId>
            <version>2.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm</artifactId>
            <version>1.5.3</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.objectweb.celtixfire</groupId>
            <artifactId>cxf-tools-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        
         <dependency>
	    <groupId>org.objectweb.celtixfire</groupId>
	    <artifactId>cxf-tools-java2wsdl</artifactId>
	    <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>org.objectweb.celtixfire</groupId>
            <artifactId>cxf-api</artifactId>
            <version>${project.version}</version>
        </dependency>



        <dependency>
            <groupId>org.objectweb.celtixfire</groupId>
            <artifactId>cxf-testutils</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>


    </dependencies>




    <build>
        <plugins>
            <plugin>
                <groupId>org.objectweb.celtixfire</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>generate-test-sources</id>
                        <phase>generate-test-sources</phase>
                        <configuration>
                            <testSourceRoot>${basedir}/target/generated/src/test/java</testSourceRoot>
                            <beanfiles>
                                <beanfile>${basedir}/src/test/java/org/objectweb/celtix/bus/configuration/resources/top.xml</beanfile>
                                <beanfile>${basedir}/src/test/java/org/objectweb/celtix/bus/configuration/resources/leaf.xml</beanfile>
                            </beanfiles>
                        </configuration>
                        <goals>
                            <goal>beangen</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
