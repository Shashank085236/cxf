#!/bin/sh
# run the Celtix java2wsdl tool 
#

me=`basename $0`
celtix_home=`dirname $0`/..

celtix_jar=$celtix_home/lib/celtix.jar

if [ ! -f $celtix_jar ]; then  
    echo "unable to find celtix.jar in $celtix_home/lib"
    exit 1
fi 

#
# add the jdk's tools.jar to the classpath
#
if [ -f "${JAVA_HOME}/lib/tools.jar" ]; then
    tool_path=${JAVA_HOME}/lib/tools.jar
fi
log_config=$celtix_home/etc/logging.properties 

celtix_classpath=${celtix_jar}:${CLASSPATH}:${tool_path}
$JAVA_HOME/bin/java -cp ${celtix_classpath} -Djava.util.logging.config.file=$log_config org.objectweb.celtix.tools.JavaToWSDL "$@"
