<?xml version="1.0"?>
<project name="hello world demo" default="build" basedir=".">

    <import file="../common_build.xml"/>

    <property name="wsdl.dir" location="${basedir}/wsdl"/>
    <property name="wsdl.file" value="hello_world.wsdl"/>

    <target name="client" description="run demo client">
            <java classname="demo.hw.client.Client" fork="yes">
                <classpath>
                    <path refid="celtix.runtime.classpath"/>
                </classpath>
		<arg value="${basedir}/wsdl/hello_world.wsdl"/>
                <arg value="${op}"/>
		<arg value="${param}"/>
                <assertions>
                    <enable package="org.objectweb.celtix"/>
                </assertions>
            </java>
    </target>
    

    <target name="server" description="run demo server">
        <celtixrun classname="demo.hw.server.Server" wsdl="${basedir}/wsdl/hello_world.wsdl"/>
    </target>
</project>
