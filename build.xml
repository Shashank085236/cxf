<?xml version="1.0"?>

<project name="celtix" default="build" basedir=".">
    <target name="build" depends="src.compile"/>

    <!-- Find the location of the tools directory -->
    <import file="etc/ant-inc/tools.xml"/>


    <target name="clean">
        <delete dir="${basedir}/build" quiet="true"/>
    </target>

    <target name="src.compile">
        <mkdir dir="${basedir}/build/classes"/>
        <javac srcdir="${basedir}/src"
            destdir="${basedir}/build/classes"
            debug="true"
            target="1.5"
            source="1.5"
            fork="true"/>
    </target>

</project>
